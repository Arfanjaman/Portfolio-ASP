    <link rel="stylesheet" type="text/css" href="~/Styles/Styles.css?v=1.1" />
    <link href="favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <!-- Responsive Navigation Styles -->
    <style>
        /* Force override of any existing nav styles */
        nav, .responsive-nav {
            background: linear-gradient(135deg, #1a1a1a, #2c2c2c, #3a3a3a) !important;
            box-shadow: 0 2px 5px rgba(0,0,0,0.3) !important;
            position: sticky !important;
            top: 0 !important;
            z-index: 1000 !important;
            padding: 0 !important;
            width: 100% !important;
        }

        .nav-container {
            display: flex !important;
            justify-content: space-between !important;
            align-items: center !important;
            max-width: 1200px !important;
            margin: 0 auto !important;
            position: relative !important;
            padding: 1rem 1.5rem !important;
        }

        .nav-logo {
            font-size: 1.5rem !important;
            font-weight: 700 !important;
            color: #ecf0f1 !important;
            text-decoration: none !important;
        }

        /* Default Desktop Navigation */
        .nav-menu {
            display: flex !important;
            list-style: none !important;
            margin: 0 !important;
            padding: 0 !important;
            gap: 0 !important;
        }

            .nav-menu li {
                margin: 0 !important;
            }

            .nav-menu a {
                display: block !important;
                color: #ecf0f1 !important;
                text-decoration: none !important;
                padding: 1rem 1.5rem !important;
                transition: background-color 0.3s ease, color 0.3s ease !important;
                border-bottom: 3px solid transparent !important;
                font-weight: 500 !important;
            }

                .nav-menu a:hover {
                    background: linear-gradient(135deg, #34495e, #2c3e50) !important;
                    border-bottom-color: #3498db !important;
                    color: #ffffff !important;
                }

                .nav-menu a.active {
                    background: linear-gradient(135deg, #3498db, #2980b9) !important;
                    border-bottom-color: #ecf0f1 !important;
                    color: #ffffff !important;
                }

        /* Mobile Navigation Toggle */
        .mobile-nav-toggle {
            display: none !important;
            background: none !important;
            border: none !important;
            cursor: pointer !important;
            padding: 0.5rem !important;
            border-radius: 8px !important;
            transition: background 0.3s ease !important;
        }

        .hamburger-line {
            width: 25px !important;
            height: 3px !important;
            background: #ecf0f1 !important;
            margin: 3px 0 !important;
            transition: all 0.3s ease !important;
            border-radius: 2px !important;
        }

        /* Mobile Dropdown */
        .mobile-dropdown {
            display: none !important;
            position: absolute !important;
            top: 100% !important;
            right: 0 !important;
            background: linear-gradient(135deg, #1a1a1a, #2c2c2c) !important;
            min-width: 250px !important;
            border-radius: 0 0 12px 12px !important;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5) !important;
            z-index: 2000 !important;
        }

            .mobile-dropdown a {
                display: block !important; /* Ensure links are vertically stacked */
                padding: 1rem 1.5rem !important;
                color: #ecf0f1 !important;
                text-decoration: none !important;
                font-weight: 500 !important;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
                transition: all 0.3s ease !important;
                background: transparent !important;
            }

                .mobile-dropdown a:last-child {
                    border-bottom: none !important;
                    border-radius: 0 0 12px 12px !important;
                }

                .mobile-dropdown a:hover {
                    background: linear-gradient(135deg, #34495e, #2c3e50) !important;
                    color: #3498db !important;
                    transform: translateX(5px) !important;
                }

            /* Mobile Menu Visibility */
            .mobile-dropdown.active {
                display: block !important;
            }

        /* Mobile Responsive Rules (media query) */
        @media screen and (max-width: 768px) {
            /* Hide desktop navigation */
            .nav-menu {
                display: none !important;
            }

            /* Show hamburger icon */
            .mobile-nav-toggle {
                display: flex !important;
                flex-direction: column !important;
                justify-content: center !important;
                align-items: center !important;
                width: 40px !important;
                height: 40px !important;
                visibility: visible !important;
            }

            /* Make dropdown appear vertically on mobile */
            .mobile-dropdown {
                width: 100% !important;
                position: absolute !important;
                left: 0 !important;
                top: 60px !important;
            }

            .nav-logo {
                font-size: 1.3rem !important;
            }
        }

        /* Footer and container styles to prevent overflow */
        .footer-content, .container {
            overflow-x: hidden !important;
            max-width: 100% !important;
        }

        * {
            word-wrap: break-word !important;
            overflow-wrap: break-word !important;
        }

        @media screen and (max-width: 600px) {
            .footer-content {
                padding: 1rem !important; 
            }

            .social-links {
                flex-direction: column !important; /* Stack social links vertically */
                align-items: center !important;
            }

            .social-link {
                margin: 0.5rem 0 !important; /* Add spacing between social links */
            }
        }


        /*bug fix*/
        /* --- FORCE VERTICAL STACK FOR THE HAMBURGER MENU --- */
        .responsive-nav .mobile-dropdown ul {
            /* kill any desktop flex/inline styles */
            display: flex !important;
            flex-direction: column !important;
            align-items: stretch !important;
            gap: 0 !important;
            list-style: none !important;
            padding: 0 !important;
            margin: 0 !important;
        }

        .responsive-nav .mobile-dropdown li {
            display: block !important;
            width: 100% !important;
        }

            .responsive-nav .mobile-dropdown li a {
                display: block !important; /* one per line */
                width: 100% !important;
            }

        /*ensure the container can wrap on small screens */
        @media (max-width: 768px) {
            .responsive-nav .nav-container {
                flex-wrap: wrap !important;
            }
        }
    </style>

    <asp:ContentPlaceHolder ID="HeadContent" runat="server" />
</head>
