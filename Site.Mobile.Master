                <a href="<%= ResolveUrl("~/Default.aspx") %>" class="logo">My Portfolio</a>
                
                <!-- Hamburger Button -->
                <button type="button" class="hamburger-btn" id="hamburgerBtn" onclick="toggleDropdown()">
                    <div class="hamburger-line"></div>
                    <div class="hamburger-line"></div>
                    <div class="hamburger-line"></div>
