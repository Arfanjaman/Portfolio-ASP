                <!-- Dropdown Navigation -->
                <nav class="dropdown-nav" id="dropdownNav">
                    <ul class="nav-menu">
                        <li class="nav-item">
                            <a href="<%= ResolveUrl("~/Default.aspx") %>" class="nav-link">
